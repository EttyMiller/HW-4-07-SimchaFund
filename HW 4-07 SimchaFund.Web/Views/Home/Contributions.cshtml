@model ContributionsViewModel;
@using HW_4_07_SimchaFund.Data;

<div b-2ya7vgwtda class="container">
    <main b-2ya7vgwtda role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>
                Contributors for the @Model.SimchaName
            </h1>
        </div>
        <div class="table-responsive">
            <form method="POST" action="/home/updatecontributions">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Contribute</th>
                        <th>Name</th>
                        <th>Balance</th>
                        <th>Always Include</th>
                        <th>Amount</th>
                    </tr>
                    @for (int x = 0; x < Model.Contributors.Count; x++)
                    {
                        var c = Model.Contributors[x];
                        <input type="hidden" name="contributions[@x].SimchaId" value=@Model.SimchaId />
                        <input type="hidden" name="contributions[@x].ContributorId" value=@c.Id />
                        <tr>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <div class="form-check form-switch">
                                        <input style="width: 4rem; height: 2rem;" name="contributions[@x].Include" class="form-check-input" type="checkbox" value="true" @(c.AmountContributed != 0 ? "checked" : "") />
                                    </div>
                                </div>
                            </td>
                            <td>@c.LastName, @c.FirstName</td>
                            <td>@c.Balance.ToString("C")</td>
                            <td style="text-align: center;">
                                @if (c.AlwaysInclude)
                                {
                                    <i style="font-size:30px" class="bi bi-check"></i>
                                }
                            </td>
                            <td>
                                <input type="text" name="contributions[@x].Amount" class="form-control" value="@(c.AmountContributed != 0 ? c.AmountContributed : "5.00")" />
                            </td>
                        </tr>
                    }

                </table>
                <div style="text-align:center;">
                    <button class="btn-lg btn-danger">Update</button>
                </div>
            </form>
        </div>

    </main>
</div>
